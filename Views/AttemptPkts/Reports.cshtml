@model IEnumerable<Pkt.Models.QueryResultViewModel>
@{
    ViewData["Title"] = "Details Report";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h2 class="card-title"><b>Details Report</b></h2>
                    </div>

                    <!-- /.card-header -->
                    <div class="card-body ">
                        <form id="quickForm">
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label>Start Date</label>
                                        <div class="input-group date" id="startDate" data-target-input="nearest">
                                            <input name="fromDate" type="text" class="form-control datetimepicker-input" data-target="#startDate" />
                                            <div class="input-group-append" data-target="#startDate" data-toggle="datetimepicker">
                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label>End Date</label>
                                        <div class="input-group date" id="endDate" data-target-input="nearest">
                                            <input type="text" name="endDates" class="form-control datetimepicker-input" data-target="#endDate" />
                                            <div class="input-group-append" data-target="#endDate" data-toggle="datetimepicker">
                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @if (Context.Session.GetString("empID") == Context.Session.GetString("QH") || Context.Session.GetString("empID") == Context.Session.GetString("AH") ||
                                Context.Session.GetString("empID") == Context.Session.GetString("OH") || Context.Session.GetString("empID") == Context.Session.GetString("TH") ||
                                Context.Session.GetString("empID") == "CE01145570" || Context.Session.GetString("empID") == "CE03070003"
                                || Context.Session.GetString("empID") == "CE101729397" || Context.Session.GetString("empID") == "CE121622102")
                                {

                                    <div class="col">
                                        <div class="form-group">
                                            <label>Process</label>
                                            <select class="form-control select2bs4" name="process" id="process">
                                                <option value="">Select Process</option>
                                                @if (Context.Session.GetString("empID") == "CE10091236" || Context.Session.GetString("empID") == "CE01145570"
                                               || Context.Session.GetString("empID") == "CE03070003"
                                               || Context.Session.GetString("empID") == "CE101729397" || Context.Session.GetString("empID") == "CE121622102")
                                                {
                                                    <option value="All">All</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                }
                            </div>
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </form>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
@if (Model != null)
{
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <div class="card card-info">
                        <div class="card-header">
                            <h2 class="card-title"><b>Details Report</b></h2>

                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Sr.No</th>
                                        <th>Employee Id</th>
                                        <th>Employee Name</th>
                                        <th>PKT Name</th>
                                        <th>PKT Date</th>
                                        <th>Process</th>
                                        <th>Question</th>
                                        <th>Correct Option</th>
                                        <th>You Opted</th>
                                        <th>Correct Answer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var index = 1;
                                    }

                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <th>@index</th>
                                            <th>@item.EmployeeId</th>
                                            <th>@item.EmployeeName</th>
                                            <th>@item.PKTName</th>
                                            <th>@item.CreatedOn</th>
                                            <th>@item.Process</th>
                                            <th>@item.Question</th>
                                            <th><span class="badge badge-primary">@item.CorrectAns</span></th>
                                            <th><span class="badge badge-warning">@item.GivenAns </span></th>
                                            <th><span class="badge badge-success">@item.CorrectAns</span></th>
                                        </tr>
                                        index++;
                                    }



                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $.ajax({
            url: '/ManagePkts/GetProcess',
            type: 'GET',
            success: function (response) {
                $.each(response, function (key, val) {
                  $('#process').append('<option value="' + val.id + '">' + val.clientName + '|' + val.processName + '|' + val.processName + '</option> ')
                });
            }
        });

        $('#quickForm').validate({
            rules: {
                fromDate: {
                    required: true,
                },
                endDates: {
                    required: true,
                },
                process: {
                    required: true
                },
            },
            messages: {
                fromDate: {
                    required: "Please Select Start Date",

                },
                endDates: {
                    required: "Please Select End Date",

                },
                process: "Please Select Process "
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                error.addClass('invalid-feedback');
                element.closest('.form-group').append(error);
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid');

            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid');
            }
        });

    </script>
}                  